#!/usr/bin/env python3
"""
Example hook that logs created tasks after insertion.
"""

import json
import os
from pathlib import Path
import sys

payload = json.load(sys.stdin)
hooks_dir = Path(os.environ.get("TASKY_HOOKS_DIR", "."))
log_path = hooks_dir / "tasky_hooks.log"
log_path.write_text(json.dumps(payload, indent=2), encoding="utf-8")
